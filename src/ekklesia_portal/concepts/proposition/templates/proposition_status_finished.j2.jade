.points_and_argument_count
  i.far.fa-thumbs-up &nbsp;
  strong.proposition_info_number(id="proposition_score_{{ id }}")= supporter_count
  | &nbsp;
  i.far.fa-comments &nbsp;
  strong.proposition_info_number= argument_count
  | &nbsp;

.voting
  div
    i.fas.fa-person-booth &nbsp;
    = _('result')
    |:

  if voting_result_symbol
    i(class=voting_result_symbol) &nbsp;
    = voting_result_description

  div
    a(href=link(voting_phase))= voting_phase.title
  div
    a(href=link(ballot))= ballot_title
